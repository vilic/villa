{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "stripInternal": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "bld/local",
    "plugins": [{"name": "tslint-language-service"}]
  },
  "exclude": ["bld", "platform", "node_modules"]
}
